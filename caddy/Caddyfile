:80 {
    encode gzip zstd
    log {
        output stdout
        format console
    }

    # Serve the offline SPA from the mounted ./static directory
    root * /srv/static
    
    @static {
        path /static/*
    }
    header @static Cache-Control "public, max-age=3600"
    
    try_files {path} /octopus.html
    file_server
}
